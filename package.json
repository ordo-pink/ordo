{
	"name": "ordo",
	"productName": "Ordo",
	"version": "0.1.0",
	"description": "A place to bring your thoughts to",
	"main": ".webpack/main",
	"scripts": {
		"start": "electron-forge start -- --debug",
		"test": "ava",
		"test:cover": "nyc ava",
		"package": "electron-forge package",
		"make": "electron-forge make",
		"debug": "electron-forge start --inspect-electron",
		"publish": "electron-forge publish",
		"lint": "eslint --ext .ts,.tsx ."
	},
	"keywords": [],
	"author": {
		"name": "Sergei Orlov",
		"email": "hello@orlow.dev"
	},
	"license": "MIT",
	"config": {
		"forge": {
			"packagerConfig": {},
			"makers": [
				{
					"name": "@electron-forge/maker-squirrel",
					"config": {
						"name": "ordo"
					}
				},
				{
					"name": "@electron-forge/maker-zip",
					"platforms": [
						"darwin"
					]
				},
				{
					"name": "@electron-forge/maker-deb",
					"config": {}
				},
				{
					"name": "@electron-forge/maker-rpm",
					"config": {}
				}
			],
			"plugins": [
				[
					"@electron-forge/plugin-webpack",
					{
						"mainConfig": "./webpack.main.config.js",
						"renderer": {
							"config": "./webpack.renderer.config.js",
							"entryPoints": [
								{
									"html": "./src/index.html",
									"js": "./src/renderer.tsx",
									"name": "main_window",
									"preload": {
										"js": "./src/preload.ts"
									}
								}
							]
						}
					}
				]
			]
		}
	},
	"prettier": {
		"printWidth": 120,
		"trailingComma": "all",
		"semi": false,
		"useTabs": true,
		"tabWidth": 1,
		"bracketSpacing": true
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es6": true,
			"node": true
		},
		"rules": {
			"import/no-unresolved": [
				2,
				{
					"ignore": [
						"ava"
					]
				}
			]
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:import/recommended",
			"plugin:import/electron",
			"plugin:import/typescript"
		],
		"parser": "@typescript-eslint/parser"
	},
	"ava": {
		"files": [
			"src/**/*.test.*"
		],
		"extensions": [
			"ts"
		],
		"require": [
			"ts-node/register"
		],
		"concurrency": 5,
		"failFast": true,
		"failWithoutAssertions": false,
		"verbose": true,
		"nodeArguments": [
			"--trace-deprecation",
			"--napi-modules"
		]
	},
	"nyc": {
		"reporter": [
			"text",
			"lcov",
			"html"
		],
		"exclude": [
			"coverage/*",
			"src/renderer.ts",
			"src/preload.ts",
			"src/main.ts",
			"*webpack*"
		],
		"branches": 80,
		"lines": 80,
		"functions": 80,
		"statements": 80,
		"check-coverage": true,
		"all": true
	},
	"devDependencies": {
		"@ava/typescript": "^3.0.1",
		"@electron-forge/cli": "^6.0.0-beta.61",
		"@electron-forge/maker-deb": "^6.0.0-beta.61",
		"@electron-forge/maker-rpm": "^6.0.0-beta.61",
		"@electron-forge/maker-squirrel": "^6.0.0-beta.61",
		"@electron-forge/maker-zip": "^6.0.0-beta.61",
		"@electron-forge/plugin-webpack": "6.0.0-beta.61",
		"@types/d3": "^7.1.0",
		"@types/react": "^17.0.38",
		"@types/react-beautiful-dnd": "^13.1.2",
		"@types/react-custom-scrollbars": "^4.0.10",
		"@types/react-dom": "^17.0.11",
		"@types/tailwindcss": "^3.0.2",
		"@typescript-eslint/eslint-plugin": "^4.0.1",
		"@typescript-eslint/parser": "^4.0.1",
		"@vercel/webpack-asset-relocator-loader": "1.7.0",
		"autoprefixer": "^10.4.2",
		"ava": "^4.0.1",
		"css-loader": "^6.5.1",
		"electron": "16.0.7",
		"eslint": "^7.6.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.20.0",
		"fork-ts-checker-webpack-plugin": "^6.0.1",
		"node-loader": "^2.0.0",
		"nyc": "^15.1.0",
		"postcss": "^8.4.5",
		"postcss-loader": "^6.2.1",
		"sinon": "^12.0.1",
		"style-loader": "^3.0.0",
		"tailwindcss": "^3.0.13",
		"ts-loader": "^9.2.2",
		"ts-node": "^10.4.0",
		"typescript": "^4.0.2"
	},
	"dependencies": {
		"@reduxjs/toolkit": "^1.7.1",
		"d3": "^7.3.0",
		"electron-devtools-installer": "^3.2.0",
		"electron-squirrel-startup": "^1.0.0",
		"fuse.js": "^6.5.3",
		"immer": "^9.0.12",
		"or-else": "^0.1.0",
		"react": "^17.0.2",
		"react-beautiful-dnd": "^13.1.0",
		"react-custom-scrollbars": "^4.2.1",
		"react-dom": "^17.0.2",
		"react-icons": "^4.3.1",
		"react-redux": "^7.2.6",
		"react-split": "^2.0.14",
		"trim-newlines": "^3.0.1",
		"yaml": "^1.10.2"
	}
}

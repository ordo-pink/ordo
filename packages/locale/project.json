{
  "name": "locale",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/locale/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/locale",
        "tsConfig": "packages/locale/tsconfig.lib.json",
        "packageJson": "packages/locale/package.json",
        "main": "packages/locale/src/index.ts",
        "assets": ["packages/locale/*.md"]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs locale {args.ver} {args.tag}"
      },
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["coverage/packages/locale"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/locale"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/locale/**/*.ts"]
      }
    }
  },
  "tags": []
}

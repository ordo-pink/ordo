      "@ordo-pink/extension-editor": ["packages/extension-editor/src/index.ts"],
      "@ordo-pink/extension-fs": ["packages/extension-fs/src/index.ts"],
      "@ordo-pink/extension-home": ["packages/extension-home/src/index.ts"],
      "@ordo-pink/extension-kanban": ["packages/extension-kanban/src/index.ts"],

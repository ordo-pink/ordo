      "@ordo-pink/stream-router": ["packages/stream-router/src/index.ts"],
      "@ordo-pink/stream-translations": ["packages/stream-translations/src/index.ts"],
      "@ordo-pink/switch": ["packages/switch/src/index.ts"]
